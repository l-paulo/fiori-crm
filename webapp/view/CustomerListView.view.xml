<mvc:View
	controllerName="zns.fioricrm.controller.CustomerListView"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:m="sap.m"
    height="100%">

    <m:Page title="{i18n>customerListViewTitle}" showNavButton="true" navButtonPress="onPageBack" class="sapUiContentPadding">
		<m:content>
			<Table
				rows="{/customerSet}"
				title="Clientes"
				selectionMode="MultiToggle">
				<columns>
					<Column width="4rem">
						<m:Label text="Id" />
						<template>
							<m:Text text="{Customerid}" wrapping="false" />
						</template>
					</Column>
                    <Column width="10rem">
						<m:Label text="{i18n>name}" />
						<template>
							<m:Text text="{Name}" wrapping="false" />
						</template>
					</Column>
                    <Column width="14rem">
						<m:Label text="{i18n>email}" />
						<template>
							<m:Text text="{Email}" wrapping="false" />
						</template>
					</Column>
                    <Column width="6rem">
						<m:Label text="{i18n>bornDate}" />
						<template>
							<m:Text text="{path: 'BornDate',formatter: '.formatter.formatDate'}" wrapping="false"/>
						</template>
					</Column>
                    <Column width="6rem">
						<m:Label text="{i18n>gender}" />
						<template>
							<m:Text text="{path: 'Gender', formatter: '.formatter.formatGender'}" wrapping="false"/>
						</template>
					</Column>
                    <Column width="4rem">
						<m:Label text="{i18n>weight}" />
						<template>
							<m:Text text="{Weight}" wrapping="false" />
						</template>
					</Column>
                    <Column width="4rem">
						<m:Label text="{i18n>country}" />
						<template>
							<m:Text text="{Country}" wrapping="false" />
						</template>
					</Column>
                    <Column width="6rem">
						<m:Label text="{i18n>options}" />
						<template>
							<m:HBox>
                                <m:Button app:Customerid="{Customerid}" icon="sap-icon://edit" press="onEdit"/>
                                <m:Button app:Customerid="{Customerid}" icon="sap-icon://delete" press="onDelete" class="sapUiTinyMarginBegin"/>
                            </m:HBox>
						</template>
					</Column>
                </columns>
            </Table>
		</m:content>
        <m:footer>
            <m:Toolbar>
                <m:Button text="Atualizar" press="onFilterEvent" type="Emphasized"/>
            </m:Toolbar>
        </m:footer>
	</m:Page>
</mvc:View>