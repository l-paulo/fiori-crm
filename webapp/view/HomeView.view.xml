<mvc:View
    controllerName="zns.fioricrm.controller.HomeView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page title="{i18n>title}">
        <GenericTile id="buttonCustomerNew" header="{i18n>newCustomer}" subheader="" press="onCustomerNewPage" class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
        <GenericTile id="buttonCustomerList" header="{i18n>listCustomers}" press="onCustomerListPage" class="sapUiTinyMarginBegin sapUiTinyMarginTop">
            <TileContent>
                <NumericContent value="0" id="customerCount"></NumericContent>
            </TileContent>
        </GenericTile>
        <GenericTile id="buttonCustomerChart" header="{i18n>chartCustomers}" subheader="" press="onCustomerChartPage" class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
    </Page>
</mvc:View>
